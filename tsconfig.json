{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "Constants": ["./Constants"],
      "Constants/*": ["./Constants/*"],
      "Data": ["./Data"],
      "Data/*": ["./Data/*"],
      "Helpers": ["./Helpers"],
      "Helpers/*": ["./Helpers/*"],
      "Scripts": ["./Scripts"],
      "Scripts/*": ["./Scripts/*"],
      "services": ["./services"],
      "services/*": ["./services/*"],
      "utils": ["./utils"],
      "utils/*": ["./utils/*"],
      "types": ["./types"],
      "types/*": ["./types/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
